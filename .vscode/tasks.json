{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend Server",
            "type": "shell",
            "command": "mvn",
            "args": ["spring-boot:run"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Frontend Server",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Full Application",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Backend Server",
                "Start Frontend Server"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "label": "Build Backend",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "package", "-DskipTests"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            }
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        }
    ]
}
